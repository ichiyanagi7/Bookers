<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(book.id), class:"link_to" %></td>
      <td><%= link_to "Edit",edit_book_path(book.id), class:"link_to"  %></td>
      <td><%= link_to "Destroy",book_path(book.id),method: :delete ,"data-confirm"=>"Are you sure?", class:"link_to" %></td>
    </tr>
  <% end %>

</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book,local:true do |f| %>

<div class="text_field_title">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class="text_area_body">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

<p class="submit-botton"><%= f.submit "Create Book" %></p>

<% end %>
