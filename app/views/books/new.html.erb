<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="text_field_title">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class="text_area_body">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

<p class="submit-botton"><%= f.submit "Create Book" %></p>

<% end %>

