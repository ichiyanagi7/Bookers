<h1>Editing Book</h1>

<%= form_with model:@book,local:true do |f| %>

<div class="text_field_title">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class="text_area_body">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

<%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show",book_path(@book[:id]) %>
<%= " | " %>
<%= link_to "Back",books_path %>