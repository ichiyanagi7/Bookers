<h1>Editing Book</h1>

<%= form_with model:@book,local:true do |f| %>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="text_field_title">
  <%= f.label:title,"Title" %>
  <span><%= f.text_field :title %></span>
</div>

<div class="text_area_body">
  <%= f.label:body,"Body" %>
  <span><%= f.text_area :body %></span>
</div>

<div class="botton">
<%= f.submit "Update Book",class:"update-botton" %>
</div>

<% end %>

<%= link_to "Show",book_path(@book[:id]),class:"link_to" %>
<%= " | " %>
<%= link_to "Back",books_path,class:"link_to" %>